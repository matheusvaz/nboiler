{
    "name": "nboiler",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "license": "WTFPL",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "prod": "node dist/src/main",
        "lint": "eslint --ext .ts ./src",
        "test": "npm run lint && cross-env APP_ENV=testing jest --testTimeout 50000",
        "test:watch": "npm run lint && cross-env APP_ENV=testing jest --testTimeout 50000 --watch",
        "test:cov": "npm run lint && cross-env APP_ENV=testing jest --testTimeout 50000 --coverage",
        "test:coveralls": "npm run lint && cross-env APP_ENV=testing jest --testTimeout 50000 --coverage --coverageReporters=text-lcov | coveralls",
        "test:debug": "npm run lint && cross-env APP_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "npm run lint && cross-env APP_ENV=testing jest --testTimeout 50000 --config ./test/jest.config.js",
        "typeorm": "node -r tsconfig-paths/register -r ts-node/register -r ./node_modules/ts-node/dist/bin ./node_modules/typeorm/cli"
    },
    "dependencies": {
        "@nestjs/common": "^6.7.2",
        "@nestjs/core": "^6.7.2",
        "@nestjs/platform-express": "^6.7.2",
        "@nestjs/typeorm": "^6.2.0",
        "class-transformer": "^0.2.3",
        "compression": "^1.7.4",
        "dotenv": "^8.2.0",
        "helmet": "^3.21.2",
        "joi": "^14.3.1",
        "libsodium-wrappers": "^0.7.6",
        "moment": "^2.24.0",
        "morgan": "^1.9.1",
        "mysql": "^2.17.1",
        "nest-winston": "^1.3.1",
        "redis": "^2.8.0",
        "redis-mock": "^0.47.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.0",
        "rxjs": "^6.5.3",
        "typeorm": "^0.2.22",
        "uuid": "^3.3.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^6.9.0",
        "@nestjs/schematics": "^6.7.0",
        "@nestjs/testing": "^6.7.1",
        "@types/compression": "^1.0.1",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.1",
        "@types/faker": "^4.1.9",
        "@types/helmet": "^0.0.45",
        "@types/jest": "^24.0.18",
        "@types/joi": "^14.3.4",
        "@types/libsodium-wrappers": "^0.7.7",
        "@types/moment": "^2.13.0",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.7.5",
        "@types/redis": "^2.8.14",
        "@types/redis-mock": "^0.17.0",
        "@types/supertest": "^2.0.8",
        "@types/uuid": "^3.4.6",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.13.0",
        "@typescript-eslint/parser": "^2.13.0",
        "coveralls": "^3.0.9",
        "cross-env": "^6.0.3",
        "devcert": "^1.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "faker": "^4.1.0",
        "jest": "^24.9.0",
        "prettier": "^1.18.2",
        "sqlite": "^3.0.3",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.1.1",
        "ts-node": "^8.4.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
